# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# Admin Telegram User ID (узнать у @userinfobot)
ADMIN_ID=your_admin_id_here

# Database configuration
# Тип БД: sqlite или mysql
DB_TYPE=sqlite

# Настройки для SQLite (если DB_TYPE=sqlite)
DB_SQLITE_FILE=cardslite.db

# Настройки для MySQL (если DB_TYPE=mysql)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=cardslite
DB_USER=cardslite_user
DB_PASS=
